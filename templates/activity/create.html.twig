{% block javascripts %}
    {{ parent() }}
     <script>
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Sélection robuste du champ
        const input = document.getElementById('activity_localisation') || 
                     document.querySelector('input[name="activity[localisation]"]') ||
                     document.querySelector('.location-autocomplete-input');
        
        const resultsContainer = document.getElementById('location-autocomplete-results');

        if (!input) {
            console.error('Erreur: Champ localisation introuvable');
            return;
        }

        if (!resultsContainer) {
            console.error('Erreur: Container des résultats introuvable');
            return;
        }

        // 2. Configuration API
        const apiKey = 'b6ae308ab9e242b382916cd2bf04da70';
        let currentController = null;

        // 3. Fonctions d'affichage
        function showLoading() {
            resultsContainer.innerHTML = '<div class="search-loading px-4 py-2">Recherche...</div>';
            resultsContainer.style.display = 'block';
        }

        function showResults(results) {
            resultsContainer.innerHTML = '';
            
            if (!results || results.length === 0) {
                resultsContainer.innerHTML = '<div class="px-4 py-2 text-gray-500">Aucun résultat</div>';
                resultsContainer.style.display = 'block';
                return;
            }

            results.forEach(result => {
                const div = document.createElement('div');
                div.textContent = result.formatted;
                div.classList.add('result-item');
                div.addEventListener('click', () => {
                    input.value = result.formatted;
                    resultsContainer.style.display = 'none';
                });
                resultsContainer.appendChild(div);
            });
            resultsContainer.style.display = 'block';
        }

        // 4. Fonction de recherche
        function fetchAutocomplete(query) {
            if (query.length < 2) {
                resultsContainer.style.display = 'none';
                return;
            }

            if (currentController) {
                currentController.abort();
            }

            showLoading();

            currentController = new AbortController();

            fetch(`https://api.opencagedata.com/geocode/v1/json?q=${encodeURIComponent(query)}&key=${apiKey}&limit=5&no_annotations=1&language=fr`, {
                signal: currentController.signal
            })
            .then(response => {
                if (!response.ok) throw new Error('Erreur réseau');
                return response.json();
            })
            .then(data => {
                showResults(data.results || []);
            })
            .catch(err => {
                if (err.name !== 'AbortError') {
                    resultsContainer.innerHTML = '<div class="search-error px-4 py-2">Erreur de recherche</div>';
                }
            });
        }

        // 5. Gestion des événements avec debounce
        let debounceTimer;
        input.addEventListener('input', function(e) {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                fetchAutocomplete(e.target.value.trim());
            }, 300);
        });

        input.addEventListener('focus', function() {
            if (input.value.trim().length >= 2) {
                fetchAutocomplete(input.value.trim());
            }
        });

        // 6. Fermeture des résultats
        document.addEventListener('click', function(e) {
            if (!input.contains(e.target) && !resultsContainer.contains(e.target)) {
                resultsContainer.style.display = 'none';
            }
        });
    });
    </script>
