{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}

    <div class="mx-auto max-w-3xl py-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Update Activity</h2>
                    <a href="{{path('app_activity')}}" class="text-blue-600 hover:text-blue-800 flex items-center">
                        <i class="ri-arrow-left-line mr-1"></i>
                        Back to List
                    </a>
                </div>
            </div>
            
            <form class="p-6">
                <div class="mb-6">
                    <label for="activity-name" class="block text-sm font-medium text-gray-700 mb-1">Activity Name</label>
                    <input 
                        type="text" 
                        id="activity-name" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Enter activity name"
                        value="Maldives Diving"
                    >
                </div>
                
                <div class="mb-6">
                    <label for="activity-description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea 
                        id="activity-description" 
                        rows="3"
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Enter activity description"
                    >Scuba diving in the beautiful Maldives waters with professional instructors</textarea>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Activity Type -->
                    <div>
                        <label for="activity-type" class="block text-sm font-medium text-gray-700 mb-1">Activity Type</label>
                        <select 
                            id="activity-type" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option value="LEISURE" selected>Leisure</option>
                            <option value="MEETINGS">Meetings</option>
                            <option value="CONFERENCE">Conference</option>
                            <option value="TEAM_BUILDING">Team Building</option>
                        </select>
                    </div>
                    
                    <!-- Location -->
                    <div>
                        <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                        <input 
                            type="text" 
                            id="location" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            placeholder="Enter location"
                            value="Maldives"
                        >
                    </div>
                    
                    <!-- Start Date -->
                    <div>
                        <label for="start-date" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                        <input 
                            type="date" 
                            id="start-date" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            value="2025-03-01"
                        >
                    </div>
                    
                    <!-- End Date -->
                    <div>
                        <label for="end-date" class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                        <input 
                            type="date" 
                            id="end-date" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            value="2025-03-01"
                        >
                    </div>
                    
                    <!-- Price -->
                    <div>
                        <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price ($)</label>
                        <input 
                            type="number" 
                            id="price" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            placeholder="Enter price"
                            min="0"
                            step="0.01"
                            value="601"
                        >
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Hotel -->
                    <div>
                        <label for="hotel" class="block text-sm font-medium text-gray-700 mb-1">Hotel</label>
                        <select 
                            id="hotel" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option value="Burj Al Arab" selected>Burj Al Arab</option>
                            <option value="The Dolder Grand">The Dolder Grand</option>
                            <option value="Four Seasons">Four Seasons</option>
                        </select>
                    </div>
                    
                    <!-- Car -->
                    <div>
                        <label for="car" class="block text-sm font-medium text-gray-700 mb-1">Car</label>
                        <select 
                            id="car" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option value="mercedes" selected>Mercedes</option>
                            <option value="bmw">BMW</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>
                    
                    <!-- Flight -->
                    <div>
                        <label for="flight" class="block text-sm font-medium text-gray-700 mb-1">Flight</label>
                        <select 
                            id="flight" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        >
                            <option value="F1" selected>Flight 1 (F1)</option>
                            <option value="F2">Flight 2 (F2)</option>
                            <option value="F3">Flight 3 (F3)</option>
                        </select>
                    </div>
                </div>
                
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Current Image</label>
                    <div class="w-full h-40 bg-gray-100 rounded-lg overflow-hidden">
                        <img src="https://via.placeholder.com/400x200?text=Maldives+Diving" alt="Current Activity Image" class="w-full h-full object-cover">
                    </div>
                    <label for="activity-image-upload" class="mt-2 inline-block text-sm text-blue-600 hover:text-blue-800 cursor-pointer">
                        <i class="ri-upload-line mr-1"></i>Change Image
                    </label>
                    <input id="activity-image-upload" type="file" class="hidden" accept="image/*" />
                </div>
                
                <div class="flex items-center justify-end space-x-3">
                    <a href="activities.html" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        Update Activity
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}