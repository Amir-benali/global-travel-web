<header class="w-full py-3 px-6 bg-white border-b border-gray-200 shadow-md">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-blue-700">Admin</h1>
            <div class="flex items-center space-x-2 mt-1">
                <span class="text-sm text-gray-500">Home</span>
                <span class="text-sm text-gray-400">/</span>
                <span class="text-sm text-gray-700 font-medium" id="current-page">
                    {% set currentRoute = app.request.get('_route') %}
                    {% if currentRoute == 'app_dashboard' %}Dashboard
                    {% elseif currentRoute starts with 'app_activities' %}Activities
                    {% elseif currentRoute starts with 'app_users' %}Users
                    {% elseif currentRoute starts with 'app_trips' %}Trips
                    {% elseif currentRoute starts with 'app_flights' %}Flights
                    {% elseif currentRoute starts with 'app_cars' %}Car Rentals
                    {% else %}Dashboard
                    {% endif %}
                </span>
            </div>
        </div>
        
        <div class="flex items-center space-x-4">
            <button class="p-2 rounded-full hover:bg-gray-100 relative">
                <i class="ri-notification-3-line text-gray-600"></i>
                <span class="absolute top-0 right-0 h-4 w-4 bg-red-500 rounded-full text-xs text-white flex items-center justify-center">
                    2
                </span>
            </button>
            
            <div class="flex items-center space-x-3 border-l pl-4 border-gray-200">
                <div class="h-8 w-8 bg-blue-600 rounded-full flex items-center justify-center text-white">
                    <i class="ri-user-line"></i>
                </div>
                <div class="flex items-center">
                    <span class="text-sm font-medium">{{ app.user ? app.user.username : 'Guest' }}</span>
                    <i class="ri-arrow-down-s-line ml-1 text-gray-500"></i>
                </div>
            </div>
        </div>
    </div>
</header>