{% extends 'base.html.twig' %}

{% block title %}offer{% endblock %}

{% block body %}
  <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-4">
                <div class="flex space-x-4">
                    <a href="{{path('app_car')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Private Car List</a>
                    <a href="{{path('app_car_driver')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Driver List</a>
                    <a href="{{path('app_car_offer')}}" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">Offer List</a>
                </div>
                
                <a href="add-offer.html" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="ri-add-line mr-1"></i>
                    ADD
                </a>
            </div>
        </div>
        
        <!-- Offer Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Offer Card 1 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://via.placeholder.com/400x200?text=Weekend+Special" alt="Weekend Special" class="w-full h-40 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute top-3 right-3 px-2 py-1 bg-red-500 text-white text-xs font-medium rounded-full">
                        20% OFF
                    </div>
                </div>
                
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Weekend Special</h3>
                    
                    <div class="flex items-center mb-3">
                        <div class="text-lg font-bold text-blue-600 mr-2">$120</div>
                        <div class="text-sm text-gray-500 line-through">$150</div>
                        <div class="ml-auto text-sm text-gray-500">per day</div>
                    </div>
                    
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Valid: May 1 - Jun 30, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-car-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Mercedes S Class</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-information-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Weekend rental discount</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="offer-details.html" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">
                            View Details
                        </a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Offer Card 2 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://via.placeholder.com/400x200?text=Business+Package" alt="Business Package" class="w-full h-40 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute top-3 right-3 px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">
                        PREMIUM
                    </div>
                </div>
                
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Business Package</h3>
                    
                    <div class="flex items-center mb-3">
                        <div class="text-lg font-bold text-blue-600 mr-2">$200</div>
                        <div class="text-sm text-gray-500 line-through">$250</div>
                        <div class="ml-auto text-sm text-gray-500">per day</div>
                    </div>
                    
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Valid: May 1 - Dec 31, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-car-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">BMW 5 Series + Driver</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-information-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Business travel package</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="offer-details.html" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">
                            View Details
                        </a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Offer Card 3 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://via.placeholder.com/400x200?text=Family+SUV+Deal" alt="Family SUV Deal" class="w-full h-40 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute top-3 right-3 px-2 py-1 bg-blue-500 text-white text-xs font-medium rounded-full">
                        FAMILY
                    </div>
                </div>
                
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Family SUV Deal</h3>
                    
                    <div class="flex items-center mb-3">
                        <div class="text-lg font-bold text-blue-600 mr-2">$180</div>
                        <div class="text-sm text-gray-500 line-through">$220</div>
                        <div class="ml-auto text-sm text-gray-500">per day</div>
                    </div>
                    
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Valid: Jun 15 - Sep 15, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-car-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Mercedes G Class</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-information-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Family vacation special</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="offer-details.html" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">
                            View Details
                        </a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Pagination -->
        <div class="mt-6 flex items-center justify-center">
            <div class="flex items-center space-x-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm opacity-50" disabled>
                    <i class="ri-arrow-left-s-line"></i>
                </button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md bg-blue-50 text-blue-600 border border-blue-200 text-sm">1</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">2</button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}