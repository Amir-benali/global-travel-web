{% extends 'base.html.twig' %}
{% block title %}{{ offer.description }} - Car Offer Details{% endblock %}
{% block body %}
    <!-- Main Content -->   

  <div class="mx-auto max-w-7xl py-6">
        <!-- Header -->
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">{{ offer.description }}</h1>
                <div class="flex items-center mt-1">
                    <a href="{{ path('app_car_offer') }}" class="text-blue-600 hover:underline flex items-center">
                        <i class="ri-arrow-left-line mr-1"></i>
                        Back to Offers
                    </a>
                </div>
            </div>
            
            <div class="flex space-x-3">
                <a href="{{ path('app_car_offer_update', {'id': offer.id}) }}" class="px-4 py-2 bg-blue-600 text-white rounded-lg flex items-center">
                    <i class="ri-edit-line mr-1"></i>
                    Edit Offer
                </a>
                <button data-delete-url="{{ path('app_car_offer_delete', {'id': offer.id}) }}" class="px-4 py-2 bg-red-600 text-white rounded-lg flex items-center">
                    <i class="ri-delete-bin-line mr-1"></i>
                    Delete
                </button>
            </div>
        </div>
        
        <!-- Offer Details -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
            <div class="md:flex">
                <div class="md:w-1/2">
                    <img src="{{ offer.getCar().getImage() }}" alt="{{ offer.description }}" class="w-full h-full object-cover">
                </div>
                <div class="md:w-1/2 p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">{{ offer.description }}</h2>
                    
                    <div class="flex items-center mb-4">
    
                        <div class="text-lg text-gray-500 line-through">${{ offer.price }}</div>
                    </div>
                    
                    <div class="space-y-3 mb-6">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 w-6"></i>
                            <span class="text-gray-700">Valid: </span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-car-line text-blue-600 w-6"></i>
                            <span class="text-gray-700">{{ offer.getCar().getModel() }}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 w-6"></i>
                            <span class="text-gray-700">Seats: {{ offer.getCar().getNumPlace() }}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-shield-check-line text-blue-600 w-6"></i>
                            <span class="text-gray-700">Insurance: </span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-3">
                        <a href="#" class="px-6 py-3 bg-green-600 text-white rounded-lg flex-1 font-medium hover:bg-green-700 text-center">
                            Book Now
                        </a>
                
                        <button class="px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50" data-share-id="{{ offer.id }}">
                            <i class="ri-share-line"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="p-6 border-t border-gray-200">
                <h3 class="text-lg font-semibold mb-4">Offer Description</h3>
                <div class="text-gray-700">
                    {{ offer.description|raw }}
                </div>
            </div>
            
            <div class="p-6 border-t border-gray-200 bg-gray-50">
                <h3 class="text-lg font-semibold mb-4">Terms & Conditions</h3>
                <ul class="list-disc pl-5 text-gray-700 space-y-2">
                        <li>term</li>
                </ul>
            </div>
        </div>
        
        {# <!-- Related Offers -->
        {% if relatedOffers is defined and relatedOffers|length > 0 %}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-semibold">Similar Offers</h3>
            </div>
            
            <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
                {% for related in relatedOffers %}
                <div class="bg-gray-50 rounded-lg overflow-hidden">
                    <div class="relative">
                        <img src="{{ related.imageUrl|default('https://via.placeholder.com/300x150?text=' ~ related.title|url_encode) }}" alt="{{ related.title }}" class="w-full h-32 object-cover">
                        {% if related.badge %}
                        <div class="absolute top-2 right-2 px-2 py-1 bg-{{ related.badgeColor|default('blue') }}-500 text-white text-xs font-medium rounded-full">
                            {{ related.badge }}
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="p-4">
                        <h4 class="font-medium text-gray-900 mb-1">{{ related.title }}</h4>
                        <div class="flex items-center mb-2">
                            <div class="text-base font-bold text-blue-600 mr-2">${{ related.price }}</div>
                            {% if related.originalPrice %}
                            <div class="text-sm text-gray-500 line-through">${{ related.originalPrice }}</div>
                            {% endif %}
                        </div>
                        <a href="{{ path('app_car_offer_details', {'id': related.id}) }}" class="text-blue-600 text-sm hover:underline">View Details</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %} #}
    </div>
{% endblock %}
