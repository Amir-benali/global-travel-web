{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
 <div class="mx-auto max-w-3xl py-8">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-800">Add New Driver</h2>
            <a href="{{path('app_car_driver')}}" class="text-blue-600 hover:text-blue-800 flex items-center">
            <i class="ri-arrow-left-line mr-1"></i>
            Back to List
            </a>
        </div>
        </div>
        {{form_start(form, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false', 'data-propagation': 'false'}})}}
        <div class="p-6">
        <div class="grid grid-cols-1 gap-6 mb-6">
            <!-- First Name -->
            <div>
            <label for="first-name" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Enter first name'}}) }}
            <div class="text-red-500 text-sm mt-1">{{ form_errors(form.firstName) }}</div>
            </div>
            <!-- Last Name -->
            <div>
            <label for="last-name" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Enter last name'}}) }}
            <error class="text-red-500 text-sm mt-1">{{ form_errors(form.lastName) }}</error>
            </div>
            <!-- Phone -->
            <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
            {{ form_widget(form.phone, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Enter phone number'}}) }}
            <error class="text-red-500 text-sm mt-1">{{ form_errors(form.phone) }}</error>
            </div>
        </div>
        </div>

        <div class="flex justify-end space-x-4 mt-4 py-2 px-6">
        {{ form_widget(form.reset, {'attr': {'class': 'px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400'}}) }}
        {{ form_widget(form.submit, {'attr': {'class': 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700'}}) }}
        </div>
        {{form_end(form)}}
    </div>
    </div>
{% endblock %}
