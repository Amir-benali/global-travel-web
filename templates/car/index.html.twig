{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
 <div class="mx-auto max-w-7xl">
        <!-- Sub Navigation -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-4">
                <div class="flex space-x-4">
                    <a href="{{path('app_car')}}" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">Private Car List</a>
                    <a href="{{path('app_car_driver')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Driver List</a>
                    <a href="{{path('app_car_offer')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Offer List</a>
                </div>
                
                <a href="{{path('app_car_create')}}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="ri-add-line mr-1"></i>
                    ADD
                </a>
            </div>
        </div>
        
        <!-- Car Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Car Card  -->
            {% for car in cars %}
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="{{car.getImage()}}" alt="Mercedes G Class" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2"{{car.getBrand()}}</h3>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-list-check text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">{{car.getId()}}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">{{car.getNumPlace()}}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-steering-2-line text-orange-500 mr-2"></i>
                            <span class="text-sm text-gray-600">Driver: {{ car.getIdDriver() is defined ? "1" : "N/A" }}</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-profile-line text-red-500 mr-2"></i>
                            <span class="text-sm text-gray-600">DR ID: N/A</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{ path('app_car_update', { id: car.getId() }) }}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">Update</a>

                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm text-center" 
                               onclick="document.getElementById('delete-alert-{{ car.getId() }}').classList.remove('hidden')">
                            Delete
                        </button>
                        <div id="delete-alert-{{ car.getId() }}" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                         {% include 'components/alert.html.twig' with {
                            'id': 'delete-car-' ~ car.getId(),
                            'title': 'Delete Car',
                            'message': 'Are you sure you want to delete this car?',
                            'confirmUrl': path('app_car_delete', { id: car.getId() }),
                            'type': 'warning',
                            'buttons': [
                                {
                                    'class': 'bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm text-center',
                                    'text': 'Delete',
                                    'url': path('app_car_delete', { id: car.getId() })
                                },
                                {
                                    'class': 'bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 rounded-md text-sm text-center',
                                    'text': 'Cancel',
                                    'url': '#',
                                    'onclick': "document.getElementById('delete-alert-" ~ car.getId() ~ "').classList.add('hidden')"
                                }
                            ],
                        } %}
                        
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
      <br>
        
        <!-- Pagination -->
        <div class="mt-6 flex items-center justify-center mx-auto">
            <div class="flex items-center space-x-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm opacity-50" disabled>
                    <i class="ri-arrow-left-s-line"></i>
                </button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md bg-blue-50 text-blue-600 border border-blue-200 text-sm">1</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">2</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">3</button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
