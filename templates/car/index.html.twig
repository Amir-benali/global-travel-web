{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
 <div class="mx-auto max-w-7xl">
        <!-- Sub Navigation -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-4">
                <div class="flex space-x-4">
                    <a href="{{path('app_car')}}" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">Private Car List</a>
                    <a href="{{path('app_car_driver')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Driver List</a>
                    <a href="{{path('app_car_offer')}}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Offer List</a>
                </div>
                
                <a href="add-car.html" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="ri-add-line mr-1"></i>
                    ADD
                </a>
            </div>
        </div>
        
        <!-- Car Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Car Card 1 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="https://via.placeholder.com/400x250" alt="Mercedes G Class" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Mercedes G Class</h3>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-list-check text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">ID: 27</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Seats: 4</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-steering-2-line text-orange-500 mr-2"></i>
                            <span class="text-sm text-gray-600">Driver: N/A</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-profile-line text-red-500 mr-2"></i>
                            <span class="text-sm text-gray-600">DR ID: N/A</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm">Update</button>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Car Card 2 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="https://via.placeholder.com/400x250" alt="Mercedes S Class" class="w-full h-48 object-cover">
