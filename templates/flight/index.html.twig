{% extends 'base.html.twig' %}

{% block title %}Flight{% endblock %}

{% block body %}
 <div class="mx-auto max-w-7xl">
        <!-- Sub Navigation -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-4">
                <div class="flex space-x-4">
                    <a href="#" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">All Flights</a>
                    <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Upcoming</a>
                    <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Completed</a>
                </div>
                
                <a href="{{path('app_flight_create')}}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="ri-add-line mr-1"></i>
                    ADD
                </a>
            </div>
        </div>
        
        <!-- Flight Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Flight Card 1 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://www.tunisair.com/sites/default/files/2022-09/tunisair-Tunisie-Catering-challenges-tn.jpg" alt="Tunisair" class="w-full h-32 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute bottom-0 left-0 p-4 text-white">
                        <div class="flex items-center">
                            <div class="h-10 w-10 rounded-full bg-white flex items-center justify-center mr-3">
                                <img src="https://www.frankfurt-airport.com/content/dam/fraport-travel/airport/fl%C3%BCge-und-airlines/airlines/airline-icons_1_1/TU_Tunisair.png/_jcr_content/renditions/original./TU_Tunisair.png" alt="Tunisair Logo" class="h-8 w-8 rounded-full">
                            </div>
                            <span class="font-medium text-lg">TN 507</span>
                        </div>
                    </div>
                    <span class="absolute top-3 right-3 px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">Confirmed</span>
                </div>
                
                <div class="p-4">
                    <div class="flex justify-between items-center mb-4">
                        <div>
                            <div class="text-2xl font-bold text-gray-800">TUN</div>
                            <div class="text-sm text-gray-500">Tunis</div>
                        </div>
                        
                        <div class="flex flex-col items-center">
                            <div class="text-xs text-gray-500 mb-1">3h 15m</div>
                            <div class="w-24 h-0.5 bg-gray-300 relative">
                                <div class="absolute -top-1.5 left-0 w-3 h-3 rounded-full bg-blue-500"></div>
                                <div class="absolute -top-1.5 right-0 w-3 h-3 rounded-full bg-blue-500"></div>
                            </div>
                            <div class="text-xs text-gray-500 mt-1">Direct</div>
                        </div>
                        
                        <div>
                            <div class="text-2xl font-bold text-gray-800">CDG</div>
                            <div class="text-sm text-gray-500">Paris</div>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">May 15, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-time-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">08:45 - 12:00</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">142 Passengers</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-price-tag-3-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">$320</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{path('app_flight_update',{id:1})}}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">Update</a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Flight Card 2 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fen.wikipedia.org%2Fwiki%2FAir_France_Flight_447&psig=AOvVaw2q0kHBPGGwiJfqwG7ql4E4&ust=1743721535624000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCPjTg4u7uowDFQAAAAAdAAAAABAE" alt="Air France" class="w-full h-32 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute bottom-0 left-0 p-4 text-white">
                        <div class="flex items-center">
                            <div class="h-10 w-10 rounded-full bg-white flex items-center justify-center mr-3">
                                <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fworldvectorlogo.com%2Flogo%2Fair-france-11&psig=AOvVaw07W-fWPuHavXSs1XWMbBx2&ust=1743721498943000&source=images&cd=vfe&opi=89978449&ved=0CBEQjRxqFwoTCLjSgfe6uowDFQAAAAAdAAAAABAS" alt="Air France Logo" class="h-8 w-8 rounded-full">
                            </div>
                            <span class="font-medium text-lg">AF 1084</span>
                        </div>
                    </div>
                    <span class="absolute top-3 right-3 px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">Confirmed</span>
                </div>
                
                <div class="p-4">
                    <div class="flex justify-between items-center mb-4">
                        <div>
                            <div class="text-2xl font-bold text-gray-800">CDG</div>
                            <div class="text-sm text-gray-500">Paris</div>
                        </div>
                        
                        <div class="flex flex-col items-center">
                            <div class="text-xs text-gray-500 mb-1">2h 45m</div>
                            <div class="w-24 h-0.5 bg-gray-300 relative">
                                <div class="absolute -top-1.5 left-0 w-3 h-3 rounded-full bg-blue-500"></div>
                                <div class="absolute -top-1.5 right-0 w-3 h-3 rounded-full bg-blue-500"></div>
                            </div>
                            <div class="text-xs text-gray-500 mt-1">Direct</div>
                        </div>
                        
                        <div>
                            <div class="text-2xl font-bold text-gray-800">LHR</div>
                            <div class="text-sm text-gray-500">London</div>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">May 18, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-time-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">14:30 - 17:15</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">186 Passengers</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-price-tag-3-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">$280</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm">Update</button>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Flight Card 3 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="relative">
                    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.euronews.com%2Ftravel%2F2024%2F06%2F17%2Flufthansa-city-airlines-what-is-the-german-flag-carriers-new-airline-and-where-will-it-fly&psig=AOvVaw2a_P4s_XclKLPKjEL4hv7d&ust=1743721568955000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCJiGoZu7uowDFQAAAAAdAAAAABAE" alt="Lufthansa" class="w-full h-32 object-cover">
                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50"></div>
                    <div class="absolute bottom-0 left-0 p-4 text-white">
                        <div class="flex items-center">
                            <div class="h-10 w-10 rounded-full bg-white flex items-center justify-center mr-3">
                                <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fen.wikipedia.org%2Fwiki%2FGerman_Airways&psig=AOvVaw1EkgsSVDBjrH85ww4pWctr&ust=1743721605343000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCJiov6m7uowDFQAAAAAdAAAAABAE" alt="Lufthansa Logo" class="h-8 w-8 rounded-full">
                            </div>
                            <span class="font-medium text-lg">LH 1710</span>
                        </div>
                    </div>
                    <span class="absolute top-3 right-3 px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">Completed</span>
                </div>
                
                <div class="p-4">
                    <div class="flex justify-between items-center mb-4">
                        <div>
                            <div class="text-2xl font-bold text-gray-800">FRA</div>
                            <div class="text-sm text-gray-500">Frankfurt</div>
                        </div>
                        
                        <div class="flex flex-col items-center">
                            <div class="text-xs text-gray-500 mb-1">4h 10m</div>
                            <div class="w-24 h-0.5 bg-gray-300 relative">
                                <div class="absolute -top-1.5 left-0 w-3 h-3 rounded-full bg-blue-500"></div>
                                <div class="absolute -top-1.5 right-0 w-3 h-3 rounded-full bg-blue-500"></div>
                            </div>
                            <div class="text-xs text-gray-500 mt-1">Direct</div>
                        </div>
                        
                        <div>
                            <div class="text-2xl font-bold text-gray-800">IST</div>
                            <div class="text-sm text-gray-500">Istanbul</div>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-calendar-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">May 10, 2023</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-time-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">10:15 - 14:25</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-user-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">210 Passengers</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-price-tag-3-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">$350</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm">Update</button>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Pagination -->
        <div class="mt-6 flex items-center justify-center">
            <div class="flex items-center space-x-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm opacity-50" disabled>
                    <i class="ri-arrow-left-s-line"></i>
                </button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md bg-blue-50 text-blue-600 border border-blue-200 text-sm">1</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">2</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">3</button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
