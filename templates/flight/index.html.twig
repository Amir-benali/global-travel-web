{% extends 'base.html.twig' %}

                        {% block title %}Flight{% endblock %}

                        {% block body %}
                        <div class="mx-auto max-w-7xl">
                            <!-- Sub Navigation -->
                            <div class="bg-white rounded-lg shadow mb-6">
                                <div class="flex items-center justify-between p-4">
                                    <div class="flex space-x-4">
                                        <a href="#" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">All Flights</a>
                                        <a href="{{ path('app_airlines_index') }}" class="px-4 py-2 text-gray-600 hover:text-blue-600">Airlines</a>
                                        <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Completed</a>
                                    </div>

                                    <a href="{{ path('app_flight_create') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                                        <i class="ri-add-line mr-1"></i>
                                        ADD
                                    </a>
                                </div>
                            </div>

                            <!-- Flight Grid -->
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                {% for flight in flights %}

                                    <div class="bg-white rounded-lg shadow overflow-hidden">

                                        <div class="relative">
                                            <img src="https://cdn.britannica.com/41/123141-050-E6229449/Air-New-Zealand-Boeing-747-400.jpg" alt="Flight Image" class="w-full h-32 object-cover">
                                            <div class="absolute bottom-0 left-0 p-4 text-white">

                                                <div class="flex items-center">

                                                    <div class="h-10 w-10 rounded-full bg-white flex items-center justify-center mr-3">
                                                        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-50">
                                                        </div>
                                                    </div>
                                                    <span class="font-medium text-lg">{{ flight.flightNumber }}</span>
                                                </div>
                                            </div>
                                            <span class="absolute top-3 right-3 px-2 py-1 bg-green-500 text-white text-xs font-medium rounded-full">{{ flight.flightStatus.value }}</span>
                                        </div>

                                        <div class="p-4">
                                            <div class="flex justify-between items-center mb-4">
                                                <div>
                                                    <div class="text-2xl font-bold text-gray-800">{{ flight.departureAirportName }}</div>
                                                    <div class="text-sm text-gray-500">{{ flight.departureCountry }}</div>
                                                </div>

                                                <div class="flex flex-col items-center">
                                                    <div class="text-xs text-gray-500 mb-1">{{ flight.durationPerHours }}</div>
                                                    <div class="w-24 h-0.5 bg-gray-300 relative">
                                                        <div class="absolute -top-1.5 left-0 w-3 h-3 rounded-full bg-blue-500"></div>
                                                        <div class="absolute -top-1.5 right-0 w-3 h-3 rounded-full bg-blue-500"></div>
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="text-2xl font-bold text-gray-800">{{ flight.arrivalAirportName }}</div>
                                                    <div class="text-sm text-gray-500">{{ flight.arrivalCountry }}</div>
                                                </div>
                                            </div>

                                            <div class="grid grid-cols-2 gap-2 mb-4">
                                                <div class="flex items-center">
                                                    <i class="ri-calendar-line text-blue-600 mr-2"></i>
                                                    <span class="text-sm text-gray-600">{{ flight.departureTime|date('M d, Y') }}</span>
                                                </div>

                                                <div class="flex items-center">
                                                    <i class="ri-user-line text-blue-600 mr-2"></i>
                                                    <span class="text-sm text-gray-600">{{ flight.availableSeats }} Passengers</span>
                                                </div>
                                                <div class="flex items-center">
                                                    <i class="ri-price-tag-3-line text-blue-600 mr-2"></i>
                                                    <span class="text-sm text-gray-600">${{ flight.flightBasePrice }}</span>
                                                </div>
                                            </div>

                                            <div class="flex space-x-2">
                                                <a href="{{ path('app_flight_update', { id: flight.idFlight }) }}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">Update</a>
                                                <form action="{{ path('app_flight_delete', { id: flight.idFlight }) }}" method="post" class="flex-1">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flight.idFlight) }}">
                                                    <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce vol ?');">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <!-- Pagination -->
                            <div class="mt-6 flex items-center justify-center">
                                <div class="flex items-center space-x-2">
                                    <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm opacity-50" disabled>
                                        <i class="ri-arrow-left-s-line"></i>
                                    </button>

                                    <button class="w-8 h-8 flex items-center justify-center rounded-md bg-blue-50 text-blue-600 border border-blue-200 text-sm">1</button>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">2</button>
                                    <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">3</button>

                                    <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">
                                        <i class="ri-arrow-right-s-line"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        {% endblock %}