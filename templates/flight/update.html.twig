{% extends 'base.html.twig' %}

{% block title %}Modifier le vol{% endblock %}

{% block body %}
    <div class="mx-auto max-w-3xl py-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Edit Flight</h2>
                    <a href="{{ path('app_flight') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                        <i class="ri-arrow-left-line mr-1"></i>
                        Return
                    </a>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'needs-validation p-6', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data','data-turbo': 'false', 'data-propagation': 'false'}}) }}
            <div class="mb-4">
                {{ form_label(form.flightNumber, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.flightNumber, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md','readonly':'readonly' } }) }}
                <div class="text-red-500 text-sm mt-1">{{ form_errors(form.flightNumber) }}</div>
            </div>

            <div class="mb-4 flex justify-center">
                <div class="w-1/3" style="margin-right: 40px;">
                    {{ form_label(form.departureAirportName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.departureAirportName, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-2">{{ form_errors(form.departureAirportName) }}</div>
                </div>

                <div class="w-1/3 ml-10" style="margin-left: 40px;">
                    {{ form_label(form.arrivalAirportName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.arrivalAirportName, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-2">{{ form_errors(form.arrivalAirportName) }}</div>
                </div>
            </div>

            <div class="mb-4 flex justify-center">
                <div class="w-1/3" style="margin-right: 40px;">
                    {{ form_label(form.departureTime, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.departureTime, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.departureTime) }}</div>
                </div>

                <div class="w-1/3" style="margin-right: 40px;">
                    {{ form_label(form.arrivalTime, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.arrivalTime, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.arrivalTime) }}</div>
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.availableSeats, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.availableSeats, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                <div class="text-red-500 text-sm mt-1">{{ form_errors(form.availableSeats) }}</div>
            </div>

            <div class="mb-4">
                {{ form_label(form.flightBasePrice, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.flightBasePrice, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                <div class="text-red-500 text-sm mt-1">{{ form_errors(form.flightBasePrice) }}</div>
            </div>

            <div class="mb-4">
                {{ form_label(form.flightStatus, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.flightStatus, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                <div class="text-red-500 text-sm mt-1">{{ form_errors(form.flightStatus) }}</div>
            </div>

            <div class="mb-4 flex justify-center">
                <div class="w-1/3" style="margin-right: 40px;">
                    {{ form_label(form.departureCountry, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.departureCountry, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.departureCountry) }}</div>
                </div>

                <div class="w-1/3" style="margin-right: 40px;">
                    {{ form_label(form.arrivalCountry, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                    {{ form_widget(form.arrivalCountry, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.arrivalCountry) }}</div>
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.airlineId, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.airlineId, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md' } }) }}
                <div class="text-red-500 text-sm mt-1">{{ form_errors(form.airlineId) }}</div>
            </div>

            <div class="flex items-center justify-end space-x-3">
                <a href="{{ path('app_flight') }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    Save modifications
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}