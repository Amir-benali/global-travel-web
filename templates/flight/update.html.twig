{% extends 'base.html.twig' %}

{% block title %}Modifier le vol{% endblock %}

{% block body %}
    <div class="mx-auto max-w-3xl py-8">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Modifier le vol</h2>
                    <a href="{{ path('app_flight') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                        <i class="ri-arrow-left-line mr-1"></i>
                        Retour à la liste
                    </a>
                </div>
            </div>

            {{ form_start(form, { 'attr': { 'class': 'p-6', 'novalidate': 'novalidate' } }) }}
            {{ form_widget(form._token) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                {% for field in form %}
                    {% if field.vars.block_prefixes[1] != 'hidden' %}
                        <div>
                            {{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
                            {{ form_widget(field, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' } }) }}
                            {{ form_errors(field, { 'attr': { 'class': 'text-red-500 text-sm mt-1' } }) }}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>

            <div class="flex items-center justify-end space-x-3">
                <a href="{{ path('app_flight') }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    Mettre à jour
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const departureInput = document.getElementById('departureTime');
            const arrivalInput = document.getElementById('arrivalTime');
            const durationInput = document.getElementById('durationPerHours');

            function calculateDuration() {
                const departureTime = new Date(departureInput.value);
                const arrivalTime = new Date(arrivalInput.value);

                if (!isNaN(departureTime) && !isNaN(arrivalTime)) {
                    const diffMs = arrivalTime - departureTime;
                    const diffHours = diffMs / (1000 * 60 * 60);

                    if (diffHours >= 0) {
                        durationInput.value = diffHours.toFixed(2);
                    } else {
                        durationInput.value = '';
                    }
                }
            }

            departureInput.addEventListener('change', calculateDuration);
            arrivalInput.addEventListener('change', calculateDuration);
        });
    </script>
{% endblock %}
