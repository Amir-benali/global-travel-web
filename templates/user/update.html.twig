{% extends 'base.html.twig' %}

{% block title %}Edit User - {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
<div class="mx-auto max-w-3xl py-8">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold text-gray-800">
                    <i class="ri-user-settings-line mr-2"></i>
                    Update User: {{ user.firstname }} {{ user.lastname }}
                </h2>
                <a href="{{ path('app_user') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                    <i class="ri-arrow-left-line mr-1"></i>
                    Back to List
                </a>
            </div>
        </div>
        
        <!-- Form -->
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
                <!-- First Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- First Name -->
                    <div>
                        {{ form_label(form.firstname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.firstname, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                    
                    <!-- Last Name -->
                    <div>
                        {{ form_label(form.lastname, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.lastname, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                </div>
                
                <!-- Second Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Email -->
                    <div>
                        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                    
                    <!-- Phone -->
                    <div>
                        {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.phoneNumber, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500',
                            'placeholder': '+216 20 200 200'
                        }}) }}
                    </div>
                </div>
                
                <!-- Third Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Role -->
                    <div>
                        {{ form_label(form.roles, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.roles, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                    
                    <!-- Status -->
                    <div>
                        {{ form_label(form.statut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.statut, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                </div>
                
                <!-- Fourth Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Genre -->
                    <div>
                        {{ form_label(form.genre, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.genre, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                    
                    <!-- Date de naissance -->
                    <div>
                        {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.dateNaissance, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                </div>
                
                <!-- Role-specific fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Admin Privileges -->
                    <div>
                        {{ form_label(form.privileges, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.privileges, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                    
                    <!-- Employee Post -->
                    <div>
                        {{ form_label(form.poste, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.poste, {'attr': {
                            'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                        }}) }}
                    </div>
                </div>
                
                <!-- Department -->
                <div>
                    {{ form_label(form.departement, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.departement, {'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                    }}) }}
                </div>
                
                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-3 pt-6">
                    <a href="{{ path('app_user') }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 flex items-center">
                        <i class="ri-save-line mr-1"></i>
                        Update User
                    </button>
                </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}