<html>
<head>
    <meta charset="UTF-8">
    <title>Hotel List</title>
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            margin: 30px;
            color: #e0e0e0;
            background: linear-gradient(180deg, #0d1a3a 0%, #1e2a5a 100%);
        }
        h1 {
            color: #8ab4f8;
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 40px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            text-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
        }
        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .hotel-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }
        .hotel-card {
            background: linear-gradient(135deg, #1e2a5a 0%, #2f3d7e 100%);
            border: 1px solid #4a5db0;
            border-radius: 14px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3), inset 0 0 12px rgba(255, 255, 255, 0.05);
            page-break-inside: avoid;
            padding: 25px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .hotel-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
        }
        .hotel-title {
            font-size: 24px;
            font-weight: 700;
            color: #a3bffa;
            margin-bottom: 14px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid #5a6db3;
            padding-bottom: 10px;
        }
        .hotel-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 14px;
            margin-bottom: 18px;
        }
        .info-item {
            display: flex;
            align-items: center;
            font-size: 15px;
            color: #1e3a8a;
            line-height: 1.6;
        }
        .info-services, .info-review {
            font-size: 15px;
            color: #1e3a8a;
            display: flex;
            align-items: flex-start;
            margin-bottom: 14px;
            line-height: 1.6;
            background: rgba(74, 93, 176, 0.2);
            padding: 10px;
            border-radius: 8px;
        }
        .icon {
            width: 18px;
            height: 18px;
            margin-right: 12px;
            flex-shrink: 0;
            stroke: #8ab4f8;
        }
        @media print {
            body {
                background: #fff;
                color: #2d3748;
                margin: 15mm;
            }
            h1 {
                color: #1a73e8;
                font-size: 26px;
                margin-bottom: 25px;
                text-shadow: none;
            }
            .hotel-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 25px;
            }
            .hotel-card {
                background: #fff;
                border: 1px solid #e2e8f0;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                padding: 20px;
            }
            .hotel-card:hover {
                transform: none;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            }
            .hotel-title {
                color: #1a202c;
                border-bottom: 1px solid #edf2f7;
            }
            .info-item, .info-services, .info-review {
                color: #4a5568;
                background: none;
            }
            .icon {
                stroke: #1a73e8;
            }
        }
    </style>
</head>
<body>
    <h1>Hotel List</h1>
    <div class="container">
        <div class="hotel-grid">
            {% for hotel in hotels %}
                <div class="hotel-card">
                    <div class="hotel-title">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                            <path d="M3 6h18v16H3zM12 2v4M8 10h8"/>
                        </svg>
                        {{ hotel.nomH }}
                    </div>
                    <div class="hotel-info">
                        <div class="info-item">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
                                <circle cx="12" cy="9" r="2"/>
                            </svg>
                            {{ hotel.adresseH }}
                        </div>
                        <div class="info-item">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                <path d="M3 9h18v12H3zM6 12h12M6 15h12"/>
                            </svg>
                            {{ hotel.villeH }}
                        </div>
                        <div class="info-item">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M2 12h20M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10"/>
                            </svg>
                            {{ hotel.paysH }}
                        </div>
                        <div class="info-item">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26"/>
                            </svg>
                            {{ hotel.categorieH }} stars
                        </div>
                        {% if hotel.coordonneesH %}
                            <div class="info-item">
                                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                                    <path d="M9 3v18M15 3v18M3 9h18M3 15h18"/>
                                </svg>
                                {{ hotel.coordonneesH }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="info-services">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                            <path d="M11 4H4v7h7V4zM11 13H4v7h7v-7zM20 4h-7v7h7V4zM20 13h-7v7h7v-7z"/>
                        </svg>
                        {{ hotel.servicesH }}
                    </div>
                    {% if hotel.avisH %}
                        <div class="info-review">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
                                <path d="M21 11.5V19a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11l5 5z"/>
                                <path d="M17 21v-8H7v8"/>
                            </svg>
                            {{ hotel.avisH }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</body>
</html>