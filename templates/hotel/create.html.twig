{% extends 'base.html.twig' %}

{% block title %}Create New Hotel{% endblock %}

{% block body %}
    <div class="mx-auto max-w-7xl py-8">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-6 border-b border-gray-200">
                <h1 class="text-2xl font-bold text-gray-800">Create New Hotel</h1>
                <a href="{{ path('app_hotel') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                    <i class="ri-arrow-left-line mr-1"></i>
                    Back to Hotels
                </a>
            </div>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-lg shadow p-6">
            {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Hotel Name -->
                    {{ form_row(form.nomH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Address -->
                    {{ form_row(form.adresseH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- City -->
                    {{ form_row(form.villeH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Country -->
                    {{ form_row(form.paysH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Category -->
                    {{ form_row(form.categorieH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Services -->
                    {{ form_row(form.servicesH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Coordinates -->
                    {{ form_row(form.coordonneesH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}

                    <!-- Review -->
                    {{ form_row(form.avisH, {
                        'label_attr': { 'class': 'block text-sm font-medium text-gray-700' },
                        'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' }
                    }) }}
                </div>

                <!-- Submit Button -->
                <div class="mt-6 flex justify-end">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Save Hotel
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}