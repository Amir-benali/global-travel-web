{% extends 'base.html.twig' %}

{% block title %}Update Chambre{% endblock %}

{% block body %}
<div class="mx-auto max-w-3xl py-8">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold text-gray-800">Update Chambre</h2>
                <a href="{{ path('app_chambre') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                    <i class="ri-arrow-left-line mr-1"></i>
                    Back to List
                </a>
            </div>
        </div>

        {{ form_start(form, { 
            'attr': { 
                'class': 'p-6',
                'novalidate': 'novalidate',
                'data-turbo': 'false',
                'data-propagation': 'false'
            } 
        }) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <!-- Type Chambre -->
                <div>
                    {{ form_label(form.typeChambreH, 'Room Type', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.typeChambreH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.typeChambreH) }}</div>
                </div>

                <!-- Price per Night -->
                <div>
                    {{ form_label(form.prixNuitH, 'Nightly Price', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.prixNuitH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.prixNuitH) }}</div>
                </div>

                <!-- Availability -->
                <div>
                    {{ form_label(form.dispoH, 'Availability', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.dispoH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.dispoH) }}</div>
                </div>

                <!-- Options -->
                <div>
                    {{ form_label(form.optionH, 'Options', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.optionH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.optionH) }}</div>
                </div>

                <!-- Hotel Selection -->
                <div>
                    {{ form_label(form.hotel, 'Hotel', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.hotel, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.hotel) }}</div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex items-center justify-end space-x-3">
                <a href="{{ path('app_chambre') }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    Update Chambre
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}