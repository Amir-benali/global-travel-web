{% extends 'base.html.twig' %}

{% block title %}hotel{% endblock %}

{% block body %}
    <div class="mx-auto max-w-7xl">
        <!-- Sub Navigation -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="flex items-center justify-between p-4">
                <div class="flex space-x-4">
                    <a href="#" class="px-4 py-2 text-blue-600 font-medium border-b-2 border-blue-600">All Hotels</a>
                    <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Popular</a>
                    <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Luxury</a>
                    <a href="#" class="px-4 py-2 text-gray-600 hover:text-blue-600">Budget</a>
                </div>
                
                <a href="{{path('app_hotel_create')}}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="ri-add-line mr-1"></i>
                    ADD HOTEL
                </a>
            </div>
        </div>
        
        <!-- Hotel Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Hotel Card 1 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="https://via.placeholder.com/400x200" alt="Grand Plaza Hotel" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Grand Plaza Hotel</h3>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-map-pin-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">123 Main Street</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-building-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">New York, USA</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-star-fill text-yellow-500 mr-2"></i>
                            <span class="text-sm text-gray-600">4.8 (120 reviews)</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-600 line-clamp-2">Luxury hotel with panoramic city views, spa, and fine dining restaurant. Perfect for business travelers and vacationers alike.</p>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{path('app_hotel_details',{id:1})}}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">View Details</a>
                        <a href="{{path('app_hotel_update',{id:1})}}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 rounded-md text-sm text-center">Update</a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Hotel Card 2 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="https://via.placeholder.com/400x200" alt="Seaside Resort" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Seaside Resort</h3>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-map-pin-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">45 Beach Boulevard</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-building-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Miami, USA</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-star-fill text-yellow-500 mr-2"></i>
                            <span class="text-sm text-gray-600">4.5 (95 reviews)</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-600 line-clamp-2">Beachfront resort with private beach access, infinity pool, and tropical gardens. Ideal for family vacations and romantic getaways.</p>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{path('app_hotel_details',{id:1})}}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">View Details</a>
                        <a href="{{path('app_hotel_update',{id:1})}}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 rounded-md text-sm text-center">Update</a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
            
            <!-- Hotel Card 3 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <img src="https://via.placeholder.com/400x200" alt="Mountain View Lodge" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Mountain View Lodge</h3>
                    
                    <div class="grid grid-cols-2 gap-2 mb-4">
                        <div class="flex items-center">
                            <i class="ri-map-pin-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">7 Alpine Road</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-building-line text-blue-600 mr-2"></i>
                            <span class="text-sm text-gray-600">Denver, USA</span>
                        </div>
                        <div class="flex items-center">
                            <i class="ri-star-fill text-yellow-500 mr-2"></i>
                            <span class="text-sm text-gray-600">4.7 (85 reviews)</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-600 line-clamp-2">Cozy lodge with stunning mountain views, fireplace in every room, and access to hiking trails. Perfect for nature lovers.</p>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{path('app_hotel_details',{id:1})}}" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md text-sm text-center">View Details</a>
                        <a href="{{path('app_hotel_update',{id:1})}}" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 rounded-md text-sm text-center">Update</a>
                        <button class="flex-1 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md text-sm">Delete</button>
                    </div>
                </div>
            </div>
        
        <!-- Pagination -->
        <div class="mt-6 flex items-center justify-center">
            <div class="flex items-center space-x-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm opacity-50" disabled>
                    <i class="ri-arrow-left-s-line"></i>
                </button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md bg-blue-50 text-blue-600 border border-blue-200 text-sm">1</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">2</button>
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">3</button>
                
                <button class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 border border-gray-300 text-sm">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
