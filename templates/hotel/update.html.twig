{% extends 'base.html.twig' %}

{% block title %}Update Hotel{% endblock %}

{% block body %}
<div class="mx-auto max-w-3xl py-8">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold text-gray-800">Update Hotel</h2>
                <a href="{{ path('app_hotel') }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                    <i class="ri-arrow-left-line mr-1"></i>
                    Back to Hotels
                </a>
            </div>
        </div>

        {{ form_start(form, { 
            'attr': { 
                'novalidate': 'novalidate',
                'data-turbo': 'false',
                'data-propagation': 'false',
                'class': 'p-6'
            } 
        }) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <!-- Hotel Name -->
                <div>
                    {{ form_label(form.nomH, 'Hotel Name', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.nomH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.nomH) }}</div>
                </div>

                <!-- Address -->
                <div>
                    {{ form_label(form.adresseH, 'Address', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.adresseH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.adresseH) }}</div>
                </div>

                <!-- Country Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Select Country</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 country-select" 
                            id="country-select">
                        <option value="">Choose a country</option>
                        {% for code, name in countries %}
                            <option value="{{ code }}" {{ form.paysH.vars.value == name ? 'selected' : '' }}>{{ name }}</option>
                        {% endfor %}
                    </select>
                    {{ form_widget(form.paysH, {
                        'attr': {
                            'class': 'hidden',
                            'readonly': true
                        }
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.paysH) }}</div>
                </div>

                <!-- City Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Select City</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 city-select" 
                            id="city-select" 
                            disabled>
                        <option value="">Choose country first</option>
                    </select>
                    {{ form_widget(form.villeH, {
                        'attr': {
                            'class': 'hidden',
                            'readonly': true
                        }
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.villeH) }}</div>
                </div>

                <!-- Category -->
                <div>
                    {{ form_label(form.categorieH, 'Category', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.categorieH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.categorieH) }}</div>
                </div>

                <!-- Services -->
                <div>
                    {{ form_label(form.servicesH, 'Services', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.servicesH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.servicesH) }}</div>
                </div>

                <!-- Coordinates -->
                <div>
                    {{ form_label(form.coordonneesH, 'Coordinates', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.coordonneesH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.coordonneesH) }}</div>
                </div>

                <!-- Reviews -->
                <div>
                    {{ form_label(form.avisH, 'Reviews', {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    {{ form_widget(form.avisH, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
                    }) }}
                    <div class="text-red-500 text-sm mt-1">{{ form_errors(form.avisH) }}</div>
                </div>
            </div>

            <!-- Form Buttons -->
            <div class="flex items-center justify-end space-x-3 mt-6">
                <a href="{{ path('app_hotel') }}" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                    Update Hotel
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const countrySelect = document.getElementById('country-select');
    const citySelect = document.getElementById('city-select');
    const countryInput = document.getElementById('{{ form.paysH.vars.id }}');
    const cityInput = document.getElementById('{{ form.villeH.vars.id }}');

    // Function to load cities for a given country code
    async function loadCities(countryCode) {
        citySelect.disabled = true;
        citySelect.innerHTML = '<option value="">Loading cities...</option>';

        try {
            const response = await fetch(`/get-cities/${encodeURIComponent(countryCode)}`);
            const data = await response.json();

            citySelect.innerHTML = '';
            if (data.success && data.cities.length > 0) {
                citySelect.disabled = false;
                data.cities.forEach(city => {
                    const option = document.createElement('option');
                    option.value = city;
                    option.textContent = city;
                    if (city === '{{ form.villeH.vars.value }}') {
                        option.selected = true;
                    }
                    citySelect.appendChild(option);
                });
            } else {
                citySelect.innerHTML = '<option value="">No cities found</option>';
            }
        } catch (error) {
            console.error('Error:', error);
            citySelect.innerHTML = '<option value="">Error loading cities</option>';
        }
    }

    // Country change handler
    countrySelect.addEventListener('change', async function() {
        const countryCode = this.value;
        const countryName = this.options[this.selectedIndex]?.text;

        if (countryCode && countryName) {
            countryInput.value = countryName;
            await loadCities(countryCode);
        } else {
            citySelect.disabled = true;
            citySelect.innerHTML = '<option value="">Choose country first</option>';
            cityInput.value = '';
        }
    });

    // City selection handler
    citySelect.addEventListener('change', function() {
        cityInput.value = this.value;
    });

    // Initialize with existing country and city
    if (countrySelect.value) {
        loadCities(countrySelect.value);
    }
});
</script>
{% endblock %}